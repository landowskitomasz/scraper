<shop>
	<category name="dzieci" url="http://mcourt.pl/category/78,dzieci-2-5-lat" >
    	<dataEntry name="product" xPath="/HTML/body/div[@class='page']/div[@class='main']/div[@class='main_body']/div[@class='side_center']/div[@class='box'][2]/div[@class='promo']/div[@class='prd']">
    	    <field name="name" xPath="div[@class='name']/h3/a" >
    	        <valueProcessor processorType="htmlUnescape" />
    	    </field>
    	    <field name="price" xPath="div[@class='price']/span[@class='value']/span[@class='digit']">
                    <valueProcessor processorType="regexClean">
                        <option name="regex" value="[a-zA-Z $\s]"/>
                    </valueProcessor>
                    <valueProcessor processorType="validate" >
                        <option name="regex" value="^[0-9]*[,][0-9]+$"/>
                    </valueProcessor>
                </field>
                <field name="url" xPath="div[@class='name']/h3/a/@href"/>
		</dataEntry>
	</category>
</shop>